---
interface Props {
	href: string;
}

const { href } = Astro.props;
---
<a href={href} class="button-link">
    <img width="20" height="20" src="/icons/link.svg" alt="">
    <slot></slot>
</a>
<style scoped>
.button-link {
    border: 1px solid;
    border-radius: 8px;
    padding: 8px 16px;
    display: flex;
    gap: 8px;
    transition:
        background-color 200ms ease,
        color 200ms ease;

    align-items: center;
}
.button-link:hover {
    background-color: #FFF;
    color: #111322;
}

.button-link img {
    transition: filter 200ms ease;
    filter:
        invert(100%)
        sepia(100%)
        saturate(1%)
        hue-rotate(161deg)
        brightness(101%)
        contrast(101%);
}
.button-link:hover img {
    filter:
        invert(6%)
        sepia(10%)
        saturate(3725%)
        hue-rotate(196deg)
        brightness(94%)
        contrast(95%);
}
</style>